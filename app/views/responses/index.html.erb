<p id="notice"><%= notice %></p>

<h1>Responses</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
     
      <th>Question</th>
    
      <th>User</th>
     
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
    <tr>
      <td><%= response.answer %></td>
      <td><%= response.question_id %></td>
      <td><%= response.user_id %></td>
      <td><%= link_to 'Show', response %></td>
      <td><%= link_to 'Edit', edit_response_path(response) %></td>
      <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Remove All", remove_all_responses_path, :method => :delete %>
<br/>
<%= link_to 'Home', root_path %>

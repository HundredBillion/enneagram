<div class="row">
  <div class="col-md-8">
    <h2>Enneagram Personality Assessment</h2>
  </div>
</div>

<br>
<br>

<input type="checkbox" id="coupon-code-icon">
<label for="coupon-code-icon" class="display-block pointer" >
  <div class="row">
     <div class="cc-icon"></div>
     <h4>Coupon Code?</h4>
  </div>
 

</label>

<div id="coupon-code-form" class="row" >
  <form action="" class="col-md-8">
    <input type="text" id="lname" placeholder="Enter Code Here">
    <button class="btn btn-primary">Submit</button>
  </form>
</div>

<hr/>
<div class="row">
  <div class="col-md-5">
    <h3>Total</h3>
  </div>
  <div class="col-md-2">
    <h2>$10</h2>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-md-6">
    <h4>PAYMENT</h4>
  </div>
</div>
<form>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <input type="number" class="form-control" id="cc-number" aria-describedby="credit card number" placeholder="Card Number">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <input type="text" class="form-control" id="cc-name" aria-describedby="credit card name" placeholder="Name as it appears on card">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <select class="custom-select" id="cc-expiration-month" aria-describedby="credit card expiration month">
          <option selected>MM</option>
          <option value="1">01</option>
          <option value="2">02</option>
          <option value="3">03</option>
          <option value="4">04</option>
          <option value="5">05</option>
          <option value="6">06</option>
          <option value="7">07</option>
          <option value="8">08</option>
          <option value="9">09</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>
      </div>
      <h3>/</h3>
      <div class="col-md-2">
        <select class="custom-select" id="cc-expiration-year" aria-describedby="credit card expiration year">
          <option selected>YY</option>
          <option value="2020">20</option>
          <option value="2021">21</option>
          <option value="2022">22</option>
          <option value="2023">23</option>
          <option value="2024">24</option>
          <option value="2025">25</option>
          <option value="2026">26</option>
          <option value="2027">27</option>
          <option value="2028">28</option>
          <option value="2029">29</option>
          <option value="2030">30</option>
          <option value="2031">31</option>
        </select>
      </div>

      <div class="col-md-2">
        <input type="number" class="form-control" id="cc-security-code" aria-describedby="credit card security code" placeholder="CVV">
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <!-- Strip form -->
    <%= form_with url: checkouts_path, method: :post, id: 'payment-form' do |form| %>

      <div class="form-row">
        <label for="card-element">Credit or debit card</label>
        <div id="card-element"></div>
        <div id="card-errors" role="alert"></div>
      </div>
      <%= form.submit 'Subscribe', class: 'btn btn-primary' %>
    <% end %>
  </div>
 </div>



 <script>
  var dropD = document.querySelector('#coupon-code-link');
  var couponForm = document.querySelector('#coupon-code-form');

  dropD.addEventListener('click', ()=> {
    couponForm.style.maxHeight = "14rem";
    couponForm.style.overflow = "auto";
    couponForm.style.fontSize = "10rem";
  });
 </script>